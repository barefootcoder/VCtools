#! /usr/bin/perl

use strict;
use warnings;

use Geek::Dev::Debug(4);

use Getopt::Std;

use VCtools::common;


#################################
# OPTIONS AND ENVIRONMENT VARS
#################################

VCtools::process_args( {
		r   =>  {
			name    =>  'recursive',
			usage   =>  '[-r]',
			comment =>  'apply operation recursively',
		},
	}, "[file_or_dir ...]");

# remember, directories are files too
my @files = @ARGV || ".";


#################################
# CHECK FOR ERRORS
#################################

VCtools::verify_files_and_group(@files);


#################################
# MAIN
#################################

my $retval = VCtools::print_status(@files);

exit $retval;							# should be 1 if any errors


#################################
# SUBS
#################################
